@{
    ViewBag.Title = "Home Page";
}
@section Styles {
    <link href="~/Content/home.css" rel="stylesheet" />
}

<section class="hero-section">
    <div class="container-fluid">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <h1 class="hero-title">Plan Smarter. Study Better. Achieve More.</h1>
                <p class="hero-subtitle">Welcome to Planity — your personal study organizer designed to help students manage subjects, assignments, exams, and goals all in one place.</p>
                <p class="hero-description">Stay productive, track progress, and make learning stress-free.</p>
                @if (!Request.IsAuthenticated){
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg hero-btn">Get Started →</a>
                }
                @if (Request.IsAuthenticated){
                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary btn-lg hero-btn">Go to Dashboard →</a>
                }
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    
                    <div class="hero-placeholder">
                        <i class="fas fa-graduation-cap fa-5x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="features-section py-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-folder-open fa-2x"></i>
                    </div>
                    <h3>Organize Everything in One Place</h3>
                    <p>Add and categorize subjects, tasks, deadlines, and exams.</p>
                    <p class="feature-benefit">Never miss an assignment or project again.</p>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line fa-2x"></i>
                    </div>
                    <h3>Visualize Your Progress</h3>
                    <p>Monitor your performance with grades and completion rates.</p>
                    <p class="feature-benefit">Generate custom study plans based on your goals.</p>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-tachometer-alt fa-2x"></i>
                    </div>
                    <h3>Personal Dashboard</h3>
                    <p>View your upcoming tasks, deadlines, and daily goals at a glance.</p>
                    <p class="feature-benefit">Tailored insights to help you stay on top of your academic life.</p>
                </div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h3>Collaboration & Notes</h3>
                    <p>Share study materials with friends or group members.</p>
                    <p class="feature-benefit">Keep your notes organized and accessible anywhere.</p>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="why-choose-section py-5">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="section-title">Why Choose Planity?</h2>
                <div class="benefits-list">
                    <div class="benefit-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Easy to use, modern, and intuitive interface.</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Designed by students, for students.</span>
                    </div>
                    <div class="benefit-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Helps you balance your time and improve study habits.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta-section py-5">
<div class="container-fluid">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="cta-title">Start organizing your studies today and unlock your academic potential.</h2>
                @if (!Request.IsAuthenticated){
                <p class="cta-subtitle">Sign up now and take control of your learning journey.</p>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Sign Up Now</a>
                }
            </div>
        </div>
    </div>
</section>